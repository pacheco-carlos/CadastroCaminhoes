@model IEnumerable<Caminhao>
@{
    ViewData["Title"] = "Index";
}

@if (TempData["sucess"] != null)
{
    <h2>@TempData["sucess"]</h2>
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary text-light">Lista de Caminhões</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Caminhao" asp-action="Inserir" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Inserir Novo Caminhão
            </a>
        </div>
    </div>
    <br /><br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th>
                Modelo
            </th>
            <th>
                Ano de Fabricação
            </th>
            <th>
                Ano Modelo
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width:"25%">
                    @obj.Nome
                </td>
                <td width:"25%">
                    @obj.Modelo
                </td>
                <td width:"25%">
                    @obj.AnoFabricacao
                </td>
                <td width:"25%">
                    @obj.AnoModelo
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Caminhao" asp-action="Editar" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Editar</a>
                        <a asp-controller="Caminhao" asp-action="Deletar" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-trash"></i>Deletar</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>